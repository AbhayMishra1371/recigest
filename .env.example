# Recigest Environment Variables Template
# Copy this file to .env.local and fill in the values.

# Google Gemini API Key for recipe generation
# Get it from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# Upstash Redis Configuration for caching and rate limiting
# Get these from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# MongoDB Connection String
MONGODB_URI=your_mongodb_uri_here

# Secret key for JWT authentication
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Google OAuth Credentials (optional, for Google Sign-In)
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Environment Variable (development | production)
NODE_ENV=development

# Application URL (e.g., http://localhost:3000 for dev, https://recigest.com for prod)
# This is used for OAuth redirects and dynamic links.
NEXT_PUBLIC_APP_URL=http://localhost:3000
